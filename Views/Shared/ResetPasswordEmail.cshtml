@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password Email | PizzaShop</title>
    <link rel="stylesheet" href="~/css/email.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="email-container">
        <div class="forgot-password-bar">
        Forgot Password 
        </div>
        <!-- ✅ Email Top Section (Sender Info & Action Icons) -->
        <div class="email-top">
            
            <!-- ✅ Left Side: Sender Info -->
            <div class="left">
                <!-- Profile Icon -->
                <div class="profile-icon">T</div>
                <div class="email-info">
                    <span class="email-sender">test.dotnet@etatvasoft.com</span>
                    <span class="email-to">To: You</span>
                </div>
            </div>
            
            <!-- ✅ Right Side: Action Icons & Date-Time -->
            <div class="right">
                <i class="fas fa-reply icon"></i> Reply
                <i class="fas fa-reply-all icon"></i> Reply-All
                <i class="fas fa-share icon"></i> Forward
                <span class="divider">|</span>
                <div class="square-box"></div>
                <span class="divider">|</span>
                <i class="fas fa-ellipsis-h icon"></i>
            </div>
        </div>

        <div class="date-time">Fri 1/24/2025 11:53 AM</div>
        <!-- ✅ Email Header (Blue Background with Logo) -->
        <div class="email-header">
            <img src="/images/pizzashop_logo.png" alt="PIZZASHOP">
        </div>

        <!-- ✅ Email Body (Text Content) -->
        <div class="email-body">
            @Html.Raw(ViewBag.EmailBody)
        </div>
        <div class="email-body">
            <button class="reply-btn">
                <i class="fas fa-reply"></i> Reply
            </button>
            <button class="forward-btn">
                <i class="fas fa-share"></i> Forward
            </button>
    </div>
</body>
</html>
