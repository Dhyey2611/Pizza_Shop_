@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - PizzaShop</title>
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>

    <div class="container">
        <!-- Left Side (Pizza Image) -->
        <div class="image-side">
            <img src="~/images/pizza_image.png" alt="">
        </div>

        <!-- Right Side (Forgot Password Form) -->
        <div class="login-side">
            <div class="login-box">
                <img src="~/images/Pizzashop_logo.png" alt="PizzaShop Logo" class="logo">
                <h2>Forgot Password</h2>
                <p>Enter your email and we'll send you a link to reset your password.</p>

                <form method="post" asp-controller="Account" asp-action="ForgotPassword">
                    <div class="input-group">
                        <i class="fa fa-user"></i>
                        <input type="email" name="Email" placeholder="Email*" required>
                    </div>

                    <button type="submit" class="login-btn">Send</button>

                    <a href="@Url.Action("Login", "Account")" class="back-link">Back to login</a>
                </form>
            </div>
        </div>
    </div>

</body>
</html>